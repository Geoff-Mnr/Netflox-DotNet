@page
@model Netflox.Pages.Admin.Profils.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detail de votre profil</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Prénom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profiles.FirstName)
        </dd>
        <dt class="col-sm-2">
            Image du profil
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profiles.ProfileImage)
        </dd>
        <dt class="col-sm-2">
            Utilisateur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profiles.MainUsers.UserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Profiles.ProfilID" class="btn btn-dark">Modifier</a> |
    <a asp-page="./Index">Retour</a>
</div>
